<% layout('layouts/boilerplate') %>
<%- include('../partials/navbar') %>

<div class="container mt-5">
  <h2 class="mb-4">Add Product</h2>

  <form action="/products" method="POST" class="needs-validation" novalidate>

    <!-- Product Name -->
    <div class="mb-3">
      <label for="name" class="form-label">Product Name</label>
      <input type="text" class="form-control" id="name" name="name" placeholder="Enter product name" required>
      <div class="invalid-feedback">Please enter a product name.</div>
    </div>

    <!-- Product Image -->
    <div class="mb-3">
      <label for="image" class="form-label">Product Image URL</label>
      <input type="url" class="form-control" id="image" name="img" placeholder="Enter image URL" required>
      <div class="invalid-feedback">Please enter a valid image URL.</div>
    </div>

    <!-- Product Price -->
    <div class="mb-3">
      <label for="price" class="form-label">Price</label>
      <input type="number" class="form-control" id="price" name="price" placeholder="Enter price" min="0" required>
      <div class="invalid-feedback">Please enter a price.</div>
    </div>

    <!-- Product Description -->
    <div class="mb-3">
      <label for="desc" class="form-label">Description</label>
      <textarea class="form-control" id="desc" name="desc" rows="3" placeholder="Enter product description" required></textarea>
      <div class="invalid-feedback">Please enter a description.</div>
    </div>

    <button type="submit" class="btn btn-primary">Add Product</button>
  </form>
</div>

<script>
  // Bootstrap 5 form validation
  (function () {
    'use strict';
    const forms = document.querySelectorAll('.needs-validation');
    Array.from(forms).forEach(form => {
      form.addEventListener('submit', event => {
        if (!form.checkValidity()) {
          // if invalid, stop form submission
          event.preventDefault();
          event.stopPropagation();
        }
        form.classList.add('was-validated');
        // ✅ no need to call return or form.submit() — browser handles valid forms
      }, false);
    });
  })();
</script>
